{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "#/",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"ROLL_NUMBER", "TENANT_NUMBER", "LAST_NAME", "POSTAL_CODE"
	],
	"properties": {
		"ROLL_NUMBER": {
			"type": "string",
			"example": "191406329000500000000",
			"pattern": "^[0-9-]*$"
		},
		"TENANT_NUMBER": {
			"type": "string",
			"example": "453534",
			"pattern": "^[0-9]*$"
		},
		"LAST_NAME": {
			"type": "string",
			"example": "Doe",
			"pattern": "^[^<>/%]*$"
		},
		"POSTAL_CODE": {
			"type": "string",
			"example": "M1M1M1",
			"pattern": "^[A-Za-z]\\d[A-Za-z] ?\\d[A-Za-z]\\d$"
		}
	},
	"definitions": {
		"TaxQueryResp": {
			"type": "object",
			"properties": {
				"LastUpdatedTimestamp": {
					"type": "string",
					"format": "date-time"
				},
				"Service": {
					"$ref": "#/definitions/TaxService"
				},
				"Payables": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/TaxPayable"
					}
				}
			},
			"description": "Property Tax payables"
		},
		"TaxService": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"example": "TAX",
					"enum": [
						"TAX"
					]
				},
				"ROLL_NUMBER": {
					"type": "string",
					"example": "191406329000500000000"
				},
				"TENANT_NUMBER": {
					"type": "string",
					"example": "453534"
				},
				"ROLL_TYPE": {
					"type": "string",
					"example": "Residential"
				},
				"Detail": {
					"$ref": "#/definitions/TaxService_Detail"
				}
			}
		},
		"TaxService_Detail": {
			"type": "object",
			"properties": {
				"PropertyLocation": {
					"type": "string",
					"example": "55 John Street, Toronto"
				},
				"AssessedOwner":{
					"type":"string",
					"example":"MyTO Residentname"
				},
				"TotalAmountDue": {
					"type": "number",
					"example": 6234.33
				}
			}
		},
		"TaxPayable": {
			"type": "object",
			"properties": {
				"Amount": {
					"type": "number",
					"format": "double",
					"example": 15.12
				},
				"DueDate": {
					"type": "string",
					"format": "date",
					"example": "2019-11-01",
					"pattern": "^[0-9-]*$"
				},
				"Type": {
					"type": "string",
					"example": "PropertyTaxBill"
				},
				"BILL_NUMBER": {
					"type": "string",
					"example": "sdf345"
				},
				"Principle": {
					"type": "number",
					"example": 100.23
				},
				"Interest": {
					"type": "number",
					"example": 10.01
				},
				"Fee": {
					"type": "number",
					"example": 0.2
				}
			}
		},
		"validateResponse" : {
			"type": "object",
			"properties": {
				"status": {
					"type": "string",
					"example": "FAILURE"
				},
				"rollNumber": {
					"type": "string",
					"example": "190101104002900451116"
				},
				"errorLabel": {
					"type": "string",
					"example": "LAST_NAME"
				},
				"errorMessage": {
					"type": "string",
					"example": "You must provide a valid last name."
				},
				"errorCode": {
					"type": "string",
					"example": "ERR-RSD-VAL-008"
				}
			}
		}
	}
}
