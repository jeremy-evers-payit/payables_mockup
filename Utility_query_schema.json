{
	"$schema": "http://json-schema.org/draft-04/schema#",
	"id": "/",
	"type": "object",
	"additionalProperties": false,
	"required": [
		"CLIENT_NUMBER", "SERVICE_NUMBER", "LAST_NAME", "POSTAL_CODE"
	],
	"properties": {
		"CLIENT_NUMBER": {
			"type": "string",
			"example": "12343242",
			"pattern": "^[0-9]*$"
		},
		"SERVICE_NUMBER": {
			"type": "string",
			"example": "23452345",
			"pattern": "^[0-9]*$"
		},
		"LAST_NAME": {
			"type": "string",
			"example": "Doe",
			"pattern": "^[^<>/%]*$"
		},
		"POSTAL_CODE": {
			"type": "string",
			"example": "M1M1M1",
			"pattern": "^[A-Za-z]\\d[A-Za-z] ?\\d[A-Za-z]\\d$"
		}
	},
	"description": "Utility payables query",
	"definitions": {
		"UtilityQueryResp": {
			"type": "object",
			"properties": {
				"Service": {
					"$ref": "#/definitions/UtilityService"
				},
				"Payables": {
					"type": "array",
					"items": {
						"$ref": "#/definitions/UtilityPayable"
					}
				},
				"validateResponse" : {
					"type": "object",
					"properties": {
						"status": {
							"type": "string",
							"example": "FAILURE"
						},
						"accountNumber": {
							"type": "string",
							"example": "00083199712113588718"
						},
						"errorLabel": {
							"type": "string",
							"example": "LAST_NAME"
						},
						"errorMessage": {
							"type": "string",
							"example": "You must provide the valid last name of the utility account."
						},
						"errorCode": {
							"type": "string",
							"example": "ERR-RSD-VAL-008"
						}
					}
				}
			},
			"description": "Utility payables"
		},
		"UtilityService": {
			"type": "object",
			"properties": {
				"Type": {
					"type": "string",
					"example": "UTILITY",
					"enum": [
						"UTILITY"
					]
				},
				"CLIENT_NUMBER": {
					"type": "string",
					"example": "12343242"
				},
				"SERVICE_NUMBER": {
					"type": "string",
					"example": "23452345"
				},
				"Detail": {
					"$ref": "#/definitions/UtilityService_Detail"
				}
			}
		},
		"UtilityService_Detail": {
			"type": "object",
			"properties": {
				"ServiceAddress": {
					"type": "string",
					"example": "1234 Any Street"
				},
				"PropertyOwner": {
					"type": "string",
					"example": "MyTO Residentname"
				},
				"TotalAmountDue": {
					"type": "number",
					"format": "double",
					"example": 2345.23
				}
			}
		},
		"Payable": {
			"type": "object",
			"properties": {
				"AmountDue": {
					"type": "number",
					"format": "double",
					"example": 15.12
				},
				"DueDate": {
					"type": "string",
					"format": "date",
					"example": "2019-11-01"
				}
			}
		},
		"UtilityPayable": {
			"allOf": [
				{
					"$ref": "#/definitions/Payable"
				}, {
					"type": "object",
					"properties": {
						"Type": {
							"type": "string",
							"example": "UtilityBill"
						},
						"BILL_NUMBER": {
							"type": "string",
							"example": "g4ga35"
						},
						"Principle": {
							"type": "number",
							"format": "double",
							"example": 1.23
						},
						"Fee": {
							"type": "number",
							"format": "double",
							"example": 0.23
						}
					}
				}
			]
		}
	}
}
